 <div class="row">
  <div class="col-md-8 col-md-offset-2">
   <div class="panel panel-default">
  
    <div class="panel-heading">
     メッセージ一覧
    </div>
  
     <div class="panel-body">
      <% @messages.each do |message| %>
       <span class="label label-info"><%= message.name %></span>
        <%= message.body%>
        <br>
        <% end %>
     </div>
     
    </div>
  </div>
</div>

<div class="row">
 <div class="col-md-8 col-md-offset-2">
  

  
    <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

     <div class="form-group">
        <label for="message_name" class="control-label col-md-1">名前:</label>
        <div class="col-md-10">
         <%= f.text_field :name, class:"form-control" %>
        </div>
     </div>

     <div class="form-group">
        <label for="message_body" class="control-label col-md-1">内容:</label>
        <div class="col-md-10">
         <%= f.text_area :body, class:"form-control", rows:"5" %>
        </div>
     </div>
<div class="col-md-10 col-md-offset-1">
    <%= f.submit"Create message", class:"btn btn-primary btn-lg btn-block" %>
</div>
     <% end %>

  </div>
</div>